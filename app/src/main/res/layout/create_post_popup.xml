<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5E3E1">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/loadedImagePost"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/home_example"
        android:foreground="@drawable/image_border"/>
    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/frame_border">

        <EditText
            android:id="@+id/txtUserPostTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="cursive"
            android:hint="Enter title..."
            android:textSize="25sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/frame_border">
        <EditText
            android:id="@+id/txtUserPostContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="cursive"
            android:hint="Enter comment..."
            android:textSize="25sp" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="520dp"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btnCancelPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="96dp"
            android:background="@drawable/gradient_shape"
            android:fontFamily="cursive"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSetPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="96dp"
            android:background="@drawable/gradient_shape"
            android:fontFamily="cursive"
            android:text="Post"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>